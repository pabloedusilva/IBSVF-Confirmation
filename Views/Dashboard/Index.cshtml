@model IBSVF.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="~/css/dashboard.css">
}

<div class="container">
    <!-- Main Content -->
    <main class="main-content">
        @Html.AntiForgeryToken()
        
        <div class="header">
            <div class="header-left">
                <h1 class="page-title">Painel</h1>
            </div>
            <div class="user-menu">
                <div class="user-dropdown" id="userDropdown">
                    <button class="user-toggle" id="userToggle">
                        <span>@(User?.Identity?.Name ?? "Admin")</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div class="user-dropdown-menu">
                        <button class="user-dropdown-item" id="logoutBtn">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Sair</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card primary">
                <div class="stat-title">
                    <i class="fas fa-user-check"></i>
                    <span>Confirmados</span>
                </div>
                <div class="stat-value" id="confirmed-count">@Model.ConfirmedCount</div>
                <i class="fas fa-user-check stat-icon"></i>
            </div>

            <div class="stat-card danger">
                <div class="stat-title">
                    <i class="fas fa-user-times"></i>
                    <span>Não Confirmados</span>
                </div>
                <div class="stat-value" id="not-confirmed-count">@Model.NotConfirmedCount</div>
                <i class="fas fa-user-times stat-icon"></i>
            </div>

            <div class="stat-card success">
                <div class="stat-title">
                    <i class="fas fa-users"></i>
                    <span>Total de Pessoas</span>
                </div>
                <div class="stat-value" id="total-people">@Model.TotalPeople</div>
                <i class="fas fa-users stat-icon"></i>
            </div>

            <div class="stat-card info">
                <div class="stat-title">
                    <i class="fas fa-home"></i>
                    <span>Famílias</span>
                </div>
                <div class="stat-value" id="families-count">@Model.FamiliesCount</div>
                <i class="fas fa-home stat-icon"></i>
            </div>
        </div>

        <!-- Participants Table -->
        <div class="table-card">
            <div class="table-header">
                <h3 class="table-title">Lista de Participantes</h3>
                <div class="table-actions">
                    <div class="search-box">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" id="searchInput" class="search-input" placeholder="Buscar participante...">
                    </div>
                    <div class="filter-dropdown">
                        <button class="filter-btn">
                            <i class="fas fa-filter"></i>
                            <span>Filtrar</span>
                        </button>
                        <div class="filter-dropdown-content">
                            <a href="#" class="filter-option active" data-filter="all">Todos</a>
                            <a href="#" class="filter-option" data-filter="confirmed">Confirmados</a>
                            <a href="#" class="filter-option" data-filter="not-confirmed">Não Confirmados</a>
                            <a href="#" class="filter-option" data-filter="with-companions">Com Acompanhantes</a>
                            <a href="#" class="filter-option" data-filter="without-companions">Sem Acompanhantes</a>
                        </div>
                    </div>

                    <a href="@Url.Action("ExportExcel")" class="export-btn">
                        <i class="fas fa-file-excel"></i>
                        <span>Exportar</span>
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table id="participantsTable">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Status</th>
                            <th>Acompanhantes</th>
                            <th>Data</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="participantsTableBody">
                        @foreach (var participante in Model.Participantes)
                        {
                            <tr>
                                <td>@participante.Nome</td>
                                <td>
                                    <span class="status-badge @(participante.Comparecimento == "yes" ? "confirmed" : "not-confirmed")">
                                        @participante.Status
                                    </span>
                                </td>
                                <td>
                                    @if (participante.Acompanhantes.Any())
                                    {
                                        @string.Join(", ", participante.Acompanhantes)
                                    }
                                    else
                                    {
                                        <span>Nenhum</span>
                                    }
                                </td>
                                <td>@participante.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <button class="action-btn edit-btn" data-id="@participante.Id" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="action-btn delete-btn delete" data-id="@participante.Id" title="Excluir">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="empty-state" id="emptyState" style="display: none;">
                <div class="empty-state-icon">
                    <i class="fas fa-user-slash"></i>
                </div>
                <h4 class="empty-state-title">Nenhum participante encontrado</h4>
                <p>Não há participantes correspondentes aos filtros aplicados.</p>
            </div>
        </div>
    </main>
</div>

<!-- Edit Participant Modal -->
<div class="modal-overlay" id="editModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title">Editar Participante</h3>
            <button class="modal-close" id="closeEditModal">&times;</button>
        </div>
        <div class="modal-body">
            <form id="editForm">
                <input type="hidden" id="editId">
                <div class="form-group">
                    <label for="editName" class="form-label">Nome Completo</label>
                    <input type="text" id="editName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Status</label>
                    <div class="radio-group">
                        <label class="radio-option">
                            <input type="radio" name="editAttendance" value="yes" checked>
                            Confirmado
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="editAttendance" value="no">
                            Não Confirmado
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Acompanhantes</label>
                    <div class="radio-group">
                        <label class="radio-option">
                            <input type="radio" name="editHasCompanions" value="yes">
                            Sim
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="editHasCompanions" value="no" checked>
                            Não
                        </label>
                    </div>
                    <div id="companionsContainer" style="margin-top: 1rem; display: none;">
                        <div id="companionsList"></div>
                        <button type="button" class="btn btn-outline" id="addCompanionBtn" style="margin-top: 0.5rem;">
                            <i class="fas fa-plus"></i> Adicionar Acompanhante
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline" id="cancelEdit">Cancelar</button>
            <button class="btn btn-primary" id="saveEdit">Salvar Alterações</button>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal">
        <div class="modal-header">
            <h3 class="modal-title">Confirmar Exclusão</h3>
            <button class="modal-close" id="closeDeleteModal">&times;</button>
        </div>
        <div class="modal-body">
            <p>Tem certeza que deseja excluir este participante? Esta ação não pode ser desfeita.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-outline" id="cancelDelete">Cancelar</button>
            <button class="btn btn-primary" id="confirmDelete" style="background-color: var(--danger);">Excluir</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard.js"></script>
}
